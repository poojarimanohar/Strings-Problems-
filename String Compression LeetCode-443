// Java Solution
// Asked by Amazon,Microsoft,Factset,CouponDunia,Goldman Sachs,Zoho,Bloomberg,Vmware,GoDaddy,Lyft,SnapChat

class Solution {
    public int compress(char[] chars) {
        int n = chars.length;
        int index = 0;
        int i = 0;
        while (i < n) {
            char c = chars[i];
            int count = 0;
            while (i < n && chars[i] == c) {
                count++;
                i++;
            }
            chars[index] = c;
            index++;
            if (count > 1) {
                String countStr = String.valueOf(count);
                for (char ch : countStr.toCharArray()) {
                    chars[index] = ch;
                    index++;
                }
            }
        }
        return index;
    }
}
